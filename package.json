{
  "name": "@asyarb/use-resize-observer",
  "version": "1.5.0",
  "description": "An easy to use React hook wrapper around the ResizeObserver API.",
  "main": "dist/index.js",
  "source": "src/index.js",
  "modern": "dist/index.mjs",
  "scripts": {
    "build": "microbundle -o dist/index.js --compress true",
    "watch": "microbundle watch -o dist/index.js --compress false",
    "format": "prettier --write 'src/**/*.js' 'rollup.config.js' 'README.md'",
    "prebuild": "rimraf dist",
    "prepublish": "yarn build",
    "release": "standard-version",
    "test": "jest"
  },
  "homepage": "https://github.com/asyarb/use-resize-observer",
  "repository": {
    "type": "git",
    "url": "https://github.com/asyarb/use-resize-observer.git"
  },
  "keywords": [
    "react",
    "hooks",
    "resize",
    "observer",
    "web",
    "polyfill"
  ],
  "author": "Anthony Yarbrough",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "babel-eslint": "^10.0.2",
    "eslint": "^6.1.0",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^1.7.0",
    "husky": "^3.0.3",
    "microbundle": "^0.11.0",
    "prettier": "^1.18.2",
    "rimraf": "^2.6.3",
    "standard-version": "^7.0.0"
  },
  "peerDependencies": {
    "react": ">=16.8"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "dependencies": {
    "resize-observer-polyfill": "^1.5.1"
  }
}
